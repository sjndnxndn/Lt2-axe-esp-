loadstring(game:HttpGet("https://raw.githubusercontent.com/Dropulix/Delta/main/Library.lua"))()
local Window = Delta:CreateWindow("LT2 Axe Highlighter")
local Tab = Window:CreateTab("ESP")
local ToggleESP = Tab:CreateToggle("Enable Axe ESP", false, function(value)
    getgenv().AxeESPEnabled = value
end)

--// Settings
getgenv().AxeESPEnabled = true
local RefreshKey = Enum.KeyCode.RightControl
local AxeESP = {}
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

--// Cleanup function
local function clearESP()
    for _, v in pairs(AxeESP) do
        if v.Text then v.Text:Remove() end
    end
    AxeESP = {}
end

--// Create 2D label
local function createESP(object)
    local drawing = Drawing.new("Text")
    drawing.Size = 14
    drawing.Center = true
    drawing.Outline = true
    drawing.Color = Color3.fromRGB(255, 255, 0)
    drawing.Visible = true
    drawing.Text = object.Name
    drawing.Font = 2

    table.insert(AxeESP, {Object = object, Text = drawing})
end

--// Detect axes (Tools that contain "Axe" in name)
local function isAxe(tool)
    return tool:IsA("Tool") and string.find(tool.Name:lower(), "axe")
end

--// Scan for all axes in workspace and player inventory
local function scanAxes()
    clearESP()

    -- Dropped axes in workspace
    for _, obj in pairs(workspace:GetDescendants()) do
        if isAxe(obj) and not obj:FindFirstAncestorWhichIsA("Player") then
            createESP(obj)
        end
    end

    -- Held axes (player's backpack/tool)
    for _, player in pairs(Players:GetPlayers()) do
        local char = player.Character
        if char then
            for _, item in pairs(char:GetChildren()) do
                if isAxe(item) then
                    createESP(item)
                end
            end
        end

        local bp = player:FindFirstChildOfClass("Backpack")
        if bp then
            for _, item in pairs(bp:GetChildren()) do
                if isAxe(item) then
                    createESP(item)
                end
            end
        end
    end
end

--// Keybind for refresh
game:GetService("UserInputService").InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == RefreshKey then
        scanAxes()
    end
end)

--// Main render loop
RunService.RenderStepped:Connect(function()
    if not getgenv().AxeESPEnabled then
        for _, v in pairs(AxeESP) do
            if v.Text then v.Text.Visible = false end
        end
        return
    end

    for i, v in pairs(AxeESP) do
        local obj = v.Object
        local text = v.Text

        if obj and obj:IsDescendantOf(game) and obj:IsA("BasePart") then
            local pos, onScreen = Camera:WorldToViewportPoint(obj.Position)
            if onScreen then
                text.Position = Vector2.new(pos.X, pos.Y)
                text.Visible = true
                text.Text = obj.Name
            else
                text.Visible = false
            end
        else
            text.Visible = false
        end
    end
end)

--// Initial scan
scanAxes()
