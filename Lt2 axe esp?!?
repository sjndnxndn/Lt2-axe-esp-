-- Axe Highlight Script for Lumber Tycoon 2

-- Settings
local highlightColor = Color3.fromRGB(0, 255, 0) -- Green
local refreshInterval = 2 -- seconds

-- Function to check if a tool is an axe
local function isAxe(tool)
    if tool:IsA("Tool") and tool:FindFirstChild("Handle") then
        local name = tool.Name:lower()
        return name:find("axe") ~= nil
    end
    return false
end

-- Function to highlight a part
local function highlightPart(part)
    if not part:FindFirstChild("AxeHighlight") then
        local highlight = Instance.new("Highlight")
        highlight.Name = "AxeHighlight"
        highlight.FillColor = highlightColor
        highlight.OutlineColor = Color3.new(1, 1, 1)
        highlight.Parent = part
    end
end

-- Function to scan and highlight all visible axes
local function highlightAxes()
    for _, v in pairs(workspace:GetDescendants()) do
        if isAxe(v) then
            highlightPart(v.Handle)
        end
    end
end

-- Loop to refresh highlights periodically
while true do
    pcall(function()
        highlightAxes()
    end)
    wait(refreshInterval)
end
